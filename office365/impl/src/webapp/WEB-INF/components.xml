<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="org.sakaiproject.office365.service.Office365Service"
        class="org.sakaiproject.office365.service.Office365ServiceImpl"
        init-method="init">
        <property name="serverConfigurationService" ref="org.sakaiproject.component.api.ServerConfigurationService" />
        <property name="officeRepo" ref="org.sakaiproject.office365.repository.OfficeUserRepository"/>
        <property name="memoryService" ref="org.sakaiproject.memory.api.MemoryService"/>
    </bean>
	
	<bean id="org.sakaiproject.office365.repository.OfficeUserRepository"
          class="org.sakaiproject.office365.repository.OfficeUserRepositoryImpl">
        <property name="sessionFactory" ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
    </bean>
	
	<bean id="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappings.office365"
          class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl">
        <property name="annotatedClasses">
            <list>
                <value>org.sakaiproject.office365.model.OfficeUser</value>
            </list>
        </property>
    </bean>

</beans>